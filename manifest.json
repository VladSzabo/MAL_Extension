{
  "manifest_version": 2,

  "name": "MAL Extension",
  "version": "1.0",
  "description": "MAL searching improved",

  "content_scripts": [{
    "matches": ["https://myanimelist.net/*"],
    "js": ["scripts/library.js", "scripts/content.js"]
  }],

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "storage"]
}